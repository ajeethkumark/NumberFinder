<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ajeethkumark.imagescanning.MainActivity"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingRight="40dp"
        android:paddingLeft="40dp">


    <Button
        android:id="@+id/scan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan Image"
        />
        <Button
            android:id="@+id/manual_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manual Data"/>
        <Button
            android:id="@+id/upload_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Import Image"/>
        <Button
            android:id="@+id/clear_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="clear data"/>
        <Button
            android:id="@+id/prediction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="prediction"/>
        <Button
            android:id="@+id/viewCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="view Captured"/>





    </LinearLayout>


</RelativeLayout>
